{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "rootDir": "./",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests/*",
    "lib"
  ]
}