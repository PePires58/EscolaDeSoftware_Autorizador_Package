{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "rootDir": "./",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "./*",
    "types/cria-token.d.ts",
    "types/busca-segredo-parameter-store.d.ts",
    "services/busca-segredo-parameter-store.ts",
    "services/cria-token.ts",
    "services/refresh-token.ts",
    "types/refresh-token.d.ts",
    "services/valida-token.ts",
    "types/valida-token.d.ts",
    "types/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./tests/*"
  ]
}